{
    "rootPath": "/",
    "handler": "onSite",
    "websites": [
        {
            "name": "Site 2",
            "conditions": {
                "path": "^/site2(.*)"
            },
            "src": "./",
            "initFile": "initSite.php"
        },
        {
            "name": "Site HTTPS",
            "conditions": {
                "https": true
            },
            "src": "./",
            "initFile": "initSite.php"
        },
        {
            "name": "Site priv√©",
            "conditions": {
                "host": "vps.*"
            },
            "src": "./",
            "initFile": "initSite.php"
        },
        {
            "name": "Site 1",
            "src": "./",
            "initFile": "initSite.php",
            "routingFile": "routing.json"
        }
    ]
}
