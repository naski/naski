{
    "rules": [
        {
            "method": ["POST"],
            "path": "/rest/user/{id}",
            "controller": "RestController",
            "action": "updateUser"
        },
        {
            "method": ["POST"],
            "path": "/rest/json",
            "controller": "RestController",
            "action": "getJSON"
        },
        {
            "method": ["GET"],
            "path": "/rest/user/{id}",
            "controller": "RestController",
            "action": "getUser"
        },
        {
            "method": "OPTIONS",
            "path": "/option",
            "controller": "RestController",
            "action": "options"
        }
    ]
}
