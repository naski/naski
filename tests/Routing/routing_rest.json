{
    "rules": [
        {
            "method": ["POST"],
            "path": "/rest/user/{id}",
            "controller": "RestController",
            "action": "updateUser"
        },
        {
            "method": ["POST"],
            "path": "/rest/json",
            "controller": "RestController",
            "action": "getJSON",
            "needJson": true
        },
        {
            "method": ["GET"],
            "path": "/rest/user/{id}",
            "controller": "RestController",
            "action": "getUser"
        },
        {
            "method": "OPTIONS",
            "path": "*",
            "controller": "RestController",
            "action": "options"
        },
        {
            "method": "*",
            "path": "*",
            "controller": "RestController",
            "action": "all"
        }
    ]
}
